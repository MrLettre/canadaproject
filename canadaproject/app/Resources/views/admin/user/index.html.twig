{% extends "admin/adminBase.html.twig"%}

{% block body %}

    <h1 class="text-center blue-text">Liste des utilisateurs</h1>
    <div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Statut</th>
            <th scope="col">Société</th>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Adresse</th>
            <th scope="col">Code postal</th>
            <th scope="col">Ville</th>
            <th scope="col">Email</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Date Affiliation</th>
            <th scope="col">Actions</th>

        </tr>
        </thead>
        <tbody>

        {% for user in users %}
            <tr>
                <td>{{ user.roles[0] }}</td>
                <td>{{ user.societe }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.numeroTelephone }}</td>
                <td>{% if user.dateCreationProfil %}{{ user.dateCreationProfil|date('d-m-Y') }}{% endif %}</td>
                <td>
                    <p class="btn btn-primary">
                        <a href="{{ path('user_show', { 'id': user.id }) }}">voir</a>
                    </p>
                    <p class="btn btn-primary">
                        <a href="{{ path('user_edit', { 'id': user.id }) }}">modifier</a>
                    </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <ul>
        <li>
            <a href="/register">Créer un nouvel utilisateur</a>
        </li>
    </ul>

{% endblock %}
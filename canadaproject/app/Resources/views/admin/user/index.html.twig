{% extends "admin/adminBase.html.twig"%}

{% block body %}
<section>
    <div class="container">
    <h1 class="text-center blue-text">Users list</h1>
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Status</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Adress</th>
                <th scope="col">Postal code</th>
                <th scope="col">City</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Actions</th>

            </tr>
            </thead>
            <tbody>

            {% for user in users %}
                <tr>
                    <td>{{ user.roles[0] }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.adresse }}</td>
                    <td>{{ user.codePostal }}</td>
                    <td>{{ user.ville }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.numeroTelephone }}</td>
                    <td>
                            <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-primary" style="width:100%">See</a>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-success" style="width:100%">modify</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
            <a href="/register" class="btn btn-success">Create a new user</a>
    </div>
</section>

{% endblock %}
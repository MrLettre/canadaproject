{% extends "base.html.twig"%}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/user.css') }}">
    <link rel="stylesheet" href="{{ asset('build/head_admin.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
{% endblock %}

{% block body %}
<section style="margin-bottom: 4vh">
    <div class="container">
        <p class="connect"> Dernière connexion le {{ app.user.lastLogin|date("d/m/Y") }}</p>
        <div class="row" style="display: flex;" id="cardForUser">
            <div id="profil" class="col-12 card">
                <div class="card-header">
                    <h3>Mon Profil</h3>
                </div>
                <ul>
                    <li><span>Nom d'utilisateur :</span> {{ app.user.username }}</li>
                    <li><span>Email:</span> {{ app.user.email }}</li>
                    <li><span>Prénom :</span> {{ app.user.prenom }}</li>
                    <li><span>Nom :</span> {{ app.user.nom }}</li>
                    <li><span>Date de naissance:</span> {{ app.user.dateNaissance|date('Y-m-d') }}</li>
                    <li><span>Adresse :</span> {{ app.user.adresse }} {{ app.user.codePostal }} {{ app.user.ville }}</li>
                    <li><span>Téléphone :</span> {{ app.user.numeroTelephone }}</li>

                </ul>

                <a href="/profile/edit"><button type="submit" class="btn btn-primary"> Modifier mon profil</button></a>
                <a href="{{ path('fos_user_security_logout') }}"><button type="submit" class="btn btn-danger">Se déconnecter</button></a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% extends 'admin/adminBase.html.twig' %}

{% block body %}
    <div style="text-align: center">
        <h1>Editer un utilisateur</h1><br>
    </div>
    {{ form_start(edit_form) }}

    <div class="form-group">
        {{ form_label(edit_form.username, "Username") }}
        {{ form_widget(edit_form.username, {'attr':{class:'form-control'}}) }}
        {{ form_errors(edit_form.username) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.nom, 'Lastname') }}
        {{ form_widget(edit_form.nom, {'attr':{class:'form-control'}}) }}
        {{ form_errors(edit_form.nom) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.prenom, 'Firstname') }}
        {{ form_widget(edit_form.prenom, {'attr':{class:'form-control'}}) }}
        {{ form_errors(edit_form.prenom) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.dateNaissance, 'Birthday') }}
        {{ form_widget(edit_form.dateNaissance) }}
        {{ form_errors(edit_form.dateNaissance) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.adresse, 'Adress') }}
        {{ form_widget(edit_form.adresse, {'attr':{class:'form-control'}}) }}
        {{ form_errors(edit_form.adresse) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.codePostal, 'Adress') }}
        {{ form_widget(edit_form.codePostal, {'attr':{class:'form-control'}}) }}
        {{ form_errors(edit_form.codePostal) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.ville, 'City') }}
        {{ form_widget(edit_form.ville, {'attr':{class:'form-control'}}) }}
        {{ form_errors(edit_form.ville) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.numeroTelephone, 'Phone') }}
        {{ form_widget(edit_form.numeroTelephone, {'attr':{class:'form-control'}}) }}
        {{ form_errors(edit_form.numeroTelephone) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.email, 'Mail') }}
        {{ form_widget(edit_form.email, {'attr':{class:'form-control'}}) }}
        {{ form_errors(edit_form.email) }}
    </div>


    <input type="submit" value="Editer cet utilisateur" class="btn btn-success" style="width: 100%"/>
    {{ form_row(edit_form._token) }}
    {{ form_end(edit_form, {'render_rest': false}) }}

        <a href="{{ path('user_index') }}" class="btn btn-primary" style="width: 100%">Back to the users list</a>

{% endblock %}

{% block body %}

    <h1>Achats de ce client</h1>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Concessionaire</th>
                    <th>Marque</th>
                    <th>Model</th>
                    <th>Livraison</th>
                    <th>Prix TTC</th>
                    <th>Montant Total</th>
                </tr>
            </thead>

            <tbody>
            {% for cartContent in cartContents %}
                <tr>
                    <td>{{cartContent.vehiculephysique.concession}}</td>
                    <td>{{cartContent.vehiculephysique.version.model.marque}}</td>
                    <td>{{cartContent.vehiculephysique.version.model}}</td>
                    <td>{{cartContent.vente.livraison.modeDeLivraison.nom}} {{cartContent.vente.livraison.modeDeLivraison.prix}}$</td>
                    <td>{{cartContent.vehiculephysique.prixTTC}}</td>
                    <td style="color: red;font-weight: bold">{{cartContent.vehiculephysique.prixTTC + cartContent.vente.livraison.modeDeLivraison.prix}}$</td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>





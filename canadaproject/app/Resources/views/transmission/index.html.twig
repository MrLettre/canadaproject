{% extends 'base.html.twig' %}

{% block body %}
    <h1>Transmissions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transmission in transmissions %}
            <tr>
                <td><a href="{{ path('transmission_show', { 'id': transmission.id }) }}">{{ transmission.id }}</a></td>
                <td>{{ transmission.nom }}</td>
                <td>{{ transmission.actif }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('transmission_show', { 'id': transmission.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('transmission_edit', { 'id': transmission.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('transmission_new') }}">Create a new transmission</a>
        </li>
    </ul>
{% endblock %}

{% extends 'admin/adminBase.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/login.css') }}">
{% endblock %}


{% block body %}


<section class="section">
        <div class="container-fluid mt-5">
            <div class="row">
                <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                   {{ form_start(form) }}
                        <div class="login-brand">
                            Créer un article
                        </div>
                   

                    <div class="card card-primary ">
                        {{ form_errors(form) }}
                        <div class="card-body register">

                                    {#-----------------------------------------GLOBAL-----------------------------------------#}

                                    <div>
                                        <label for="nom">Sujet</label>
                                        {{ form_label(form.sujet) }}
                                        {{ form_widget(form.sujet) }}
                                    </div>

                                    <div>
                                        <label for="prenom">Titre</label>
                                        {{ form_widget(form.titre) }}
                                        {{ form_errors(form.titre) }}
                                    </div>

                                    <div>
                                        <label for="username">Résumé</label>
                                        {{ form_widget(form.resume) }}
                                        {{ form_errors(form.resume) }}
                                    </div>

                                    <div>
                                        <label for="dateNaissance">Article</label>
                                        {{ form_widget(form.article) }}
                                        {{ form_errors(form.article) }}
                                    </div>

                                    <div>
                                        <label for="tel">Résumé important</label>
                                        {{ form_widget(form.resumeImportant) }}
                                        {{ form_errors(form.resumeImportant) }}
                                    </div>

                                     <div>
                                        <label for="tel">Choisir une image</label>
                                        {{ form_widget(form.imageFile) }}
                                        {{ form_errors(form.imageFile) }}
                                    </div>

                                    
                                    {{ form_widget(form._token) }}
                                    <div class="form-group col-12">
                                         <input class="btn btn-success btn-block" type="submit" value="créer l'article" style="margin-top: 2vh"/>
                                    </div>

                                     <div class="form-group col-12">
                                        <a href="{{ path('article_admin_index') }}" class="btn btn-primary btn-block">Retour à la liste des articles</a>
                                    </div>

                                </div>
                          {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>





{% endblock %}

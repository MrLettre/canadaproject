{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehiculephysique</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehiculePhysique.id }}</td>
            </tr>
            <tr>
                <th>Online since</th>
                <td>{% if vehiculePhysique.dateMiseEnLigne %}{{ vehiculePhysique.dateMiseEnLigne|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date of sale</th>
                <td>{% if vehiculePhysique.dateDeVente %}{{ vehiculePhysique.dateDeVente|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Mileage</th>
                <td>{{ vehiculePhysique.kilometrage }}</td>
            </tr>
            <tr>
                <th>Date when first circulated</th>
                <td>{% if vehiculePhysique.dateDeMiseEnCirculation %}{{ vehiculePhysique.dateDeMiseEnCirculation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Prix no texes</th>
                <td>{{ vehiculePhysique.prixHT }}</td>
            </tr>
            <tr>
                <th>Prix with taxes</th>
                <td>{{ vehiculePhysique.prixTTC }}</td>
            </tr>
            <tr>
                <th>Selling price</th>
                <td>{{ vehiculePhysique.prixHA }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vehiculePhysique.descriptif }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
               {# <td><img src="{{ vich_uploader_asset(vehiculePhysique.imageFile, 'imageFile') }}" style="max-width: 250px"/></td>#}
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vehiculephysique_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vehiculephysique_edit', { 'id': vehiculePhysique.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>



{% endblock %}

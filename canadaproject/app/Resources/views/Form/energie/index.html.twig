{% extends 'base.html.twig' %}

{% block body %}
    <h1>Energies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for energie in energies %}
            <tr>
                <td><a href="{{ path('energie_show', { 'id': energie.id }) }}">{{ energie.id }}</a></td>
                <td>{{ energie.nom }}</td>
                <td>{% if energie.actif %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('energie_show', { 'id': energie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('energie_edit', { 'id': energie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('energie_new') }}">Create a new energy</a>
        </li>
    </ul>
{% endblock %}

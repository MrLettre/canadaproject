{% extends 'base.html.twig' %}

{% block body %}
    <h1>Energy</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ energie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ energie.nom }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if energie.actif %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('energie_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('energie_edit', { 'id': energie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

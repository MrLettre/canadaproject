{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cart</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Basket's creation</th>
                <td>{% if cart.dateMiseAuPanier %}{{ cart.dateMiseAuPanier|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cart_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cart_edit', { 'id': cart.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

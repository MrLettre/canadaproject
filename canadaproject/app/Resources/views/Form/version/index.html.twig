{% extends 'base.html.twig' %}

{% block body %}
    <h1>Versions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Active</th>
                <th>ThPower</th>
                <th>hyPower</th>
                <th>elPower</th>
                <th>ThAutonomy</th>
                <th>HyAutonomy</th>
                <th>ElAutonomy</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for version in versions %}
            <tr>
                <td><a href="{{ path('version_show', { 'id': version.id }) }}">{{ version.id }}</a></td>
                <td>{{ version.nom }}</td>
                <td>{% if version.actif %}Yes{% else %}No{% endif %}</td>
                <td>{{ version.puissanceTh }}</td>
                <td>{{ version.puissanceHy }}</td>
                <td>{{ version.puissanceEl }}</td>
                <td>{{ version.autonimieTh }}</td>
                <td>{{ version.autonomieHy }}</td>
                <td>{{ version.autonomieEl }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('version_show', { 'id': version.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('version_edit', { 'id': version.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('version_new') }}">Create a new version</a>
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bdv</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bdv.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bdv.nom }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if bdv.actif %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bdv_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bdv_edit', { 'id': bdv.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

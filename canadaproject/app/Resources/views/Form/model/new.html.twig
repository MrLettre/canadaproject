{% extends 'admin/adminBase.html.twig' %}

{% block body %}
    <h1>Créer un modèle de véhicule</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.marque, 'Marque') }}
        {{ form_widget(form.marque, {'attr':{class:'form-control'}}) }}
        {{ form_errors(form.marque) }}
    </div>

    <div class="form-group">
        {{ form_label(form.typeVehicule, 'Type de véhicule') }}
        {{ form_widget(form.typeVehicule, {'attr':{class:'form-control'}}) }}
        {{ form_errors(form.typeVehicule) }}
    </div>

    <div class="form-group">
        {{ form_label(form.nom, 'Nom du modèle') }}
        {{ form_widget(form.nom, {'attr':{class:'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>

    <div class="form-group">
        {{ form_label(form.actif, 'actif') }}
        {{ form_widget(form.actif) }}
        {{ form_errors(form.actif) }}
    </div>

    <input class="btn btn-primary" type="submit" value="créer un modèle" />
    {{ form_end(form) }}

    <p>
        <a href="{{ path('vehicledefinition_new') }}">Retour à la création d'une définition de véhicule</a>
    </p>
{% endblock %}

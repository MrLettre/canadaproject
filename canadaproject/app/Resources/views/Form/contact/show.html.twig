{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/listing_render.css') }}">
{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <section class="contact-section col-md-12">

        <!-- Form with header -->
        <div class="card">

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-lg-8">
                    <div class="card-body form">

                        <!-- Header -->
                        <h3 id="test" class="mt-4"><i class="fa fa-envelope pr-2"></i>Contact request:</h3>

                        <!-- Grid row -->
                        <div class="row">
                            <!-- Grid column -->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <h6>Request coming from :</h6> <p>{{ contact.statutContact }}</p>

                                </div>
                            </div>

                            <!-- Grid column -->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <h6>Contact motive :</h6> <p> {{ contact.motifContact }}</p>
                                </div>
                            </div>

                            <!-- Grid column -->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <h6>Company (if professionnal) :</h6> <p> {{ contact.nomSteContact }}</p>
                                </div>
                            </div>

                            <!-- Grid column -->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <h6> Contact name :</h6> <p> {{ contact.civiliteContact }} {{ contact.nomContact }} {{ contact.prenomContact }}</p>
                                </div>
                            </div>
                        </div>

                        <!-- Grid row -->
                        <div class="row">
                            <!-- Grid column -->
                            <div class="col-md-12">
                                <div class="md-form mb-0">
                                   <h6> Message :</h6> <p> {{ contact.messageContact }}</p>
                                </div>
                                <div class="col-md-12" style="display: flex">
                                    <p>
                                        <a class="btn btn-primary" href="{{ path('contact_edit', { 'id': contact.id }) }}">Handle request</a>
                                    </p>
                                    <p>
                                        <a class="btn btn-success"href="{{ path('contact_index') }}">Back to contact request list</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Grid column -->

                <!-- Grid column -->
                <div class="col-lg-4">
                    <div class="card-body contact text-center h-100 white-text">
                        <h3 class="my-4 pb-2 white-text">Contact coordinates</h3>
                        <hr class="hr-light my-4">
                        <ul class="text-lg-left list-unstyled ml-4">
                            <li>
                                <p class="contact-adresse text-center white-text"><i data-feather="mail"></i> Email :</p>
                                <p class="contact-adresse text-center white-color">{{ contact.emailContact }}</p>
                            </li>
                            <li>
                                <p class="contact-adresse text-center white-text"><i data-feather="phone"></i> Phone :</p>
                                <p class="contact-adresse text-center white-color">{{ contact.phoneContact }}</p>
                            </li>
                            <li>
                                <p class="contact-adresse text-center white-text"><i data-feather="map-pin"></i> Adress :</p>
                                <p class="contact-adresse text-center white-color">{{ contact.adresseContact }} <br> {{ contact.codePostalContact }} {{ contact.villeContact }}</p>
                            </li>
                        </ul>

                    </div>

                </div>
                <!-- Grid column -->



            </div>
            <!-- Grid row -->
        </div>
        <!-- Form with header -->
    </section>










{% endblock %}

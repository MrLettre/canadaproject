{% extends 'admin/adminBase.html.twig' %}

{% block body %}
    <div style="text-align: center">
        <h1>Dealers</h1>
    </div>
    <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Adress</th>
                <th>Postal code</th>
                <th>City</th>
                <th>Phone</th>
                <th>Mail</th>
                <th>Contact name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concession in concessions %}
            {% if concession.actif %}
            <tr>
                <td>{{ concession.nom }}</td>
                <td>{{ concession.adresse }}</td>
                <td>{{ concession.codePostal }}</td>
                <td>{{ concession.ville }}</td>
                <td>{{ concession.tel }}</td>
                <td>{{ concession.mail }}</td>
                <td>{{ concession.nomDuContact }}</td>
                <td>
                    <a href="{{ path('concession_show', { 'id': concession.id }) }}" class="btn btn-primary" style="width: 100%">Consult</a>
                    <a href="{{ path('concession_edit', { 'id': concession.id }) }}" class="btn btn-success" style="width: 100%">Edit</a>
                </td>
            </tr>
        {% else %}
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}

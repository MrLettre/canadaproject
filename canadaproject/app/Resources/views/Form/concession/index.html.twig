{% extends 'admin/adminBase.html.twig' %}

{% block body %}
    <div style="text-align: center">
        <h1>Concessions</h1>
    </div>
    <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Mail</th>
                <th>Nomducontact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concession in concessions %}
            {% if concession.actif %}
            <tr>
                <td>{{ concession.nom }}</td>
                <td>{{ concession.adresse }}</td>
                <td>{{ concession.codePostal }}</td>
                <td>{{ concession.ville }}</td>
                <td>{{ concession.tel }}</td>
                <td>{{ concession.mail }}</td>
                <td>{{ concession.nomDuContact }}</td>
                <td>
                    <a href="{{ path('concession_show', { 'id': concession.id }) }}" class="btn btn-primary" style="width: 100%">Consulter</a>
                    <a href="{{ path('concession_edit', { 'id': concession.id }) }}" class="btn btn-success" style="width: 100%">Editer</a>
                </td>
            </tr>
        {% else %}
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
<section>
    <div class="container">
        <div class="row justify-content-md-center" style="margin-top: 3vh">
            <div class="col-md-10">
                <div class="progress">
                    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
                        <span class="sr-only">50% effectué (success)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-top: 3vh">
        <div class="row">
            <h1>Options de livraison</h1>
        </div>
    </div>
    <div class="container" style="margin-top: 3vh">
        <div class="row" >
            <div class="col-md-6" style="text-align: center">
                {% for cart in carts %}
                    <h4>{{ cart.vehiculePhysique.version.model.marque }} {{ cart.vehiculePhysique.version.model }} {{ cart.vehiculePhysique.version }}</h4>
                    <img src="/images/photosVehiculePhysique/{{ cart.vehiculePhysique.imageName }}" width="300vw" height="auto">
                {% endfor %}
            </div>
            <div class="col-md-6">
                <h4>Sélectionnez un mode de livraison</h4>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">GRATUIT - Livraison en Concession <span style="color: red; font-weight: bold">livraison sous 7 jours</span>
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">200$ - Livraison dans un dépot Carify <span style="color: red; font-weight: bold">livraison sous 15 jours</span>
                    </label>
                </div>
                <div class="form-check disabled">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="" disabled>1000$ - Livraison à domicile <span style="color: red; font-weight: bold">livraison sous 20 jours</span>
                    </label>
                </div>
        </div>
        <div class="row" >
            <button class="btn btn-success"><a href="{{ path('cart_payment') }}"> Valider mon mode de livraison</a></button>
        </div>
    </div>
    </div>
{% endblock %}
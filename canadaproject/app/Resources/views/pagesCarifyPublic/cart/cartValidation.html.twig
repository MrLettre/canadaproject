{% extends 'base.html.twig' %}

{% block body %}
<section>
    <div class="container">
        <div class="row justify-content-md-center" style="margin-top: 3vh">
            <div class="col-md-10">
                <div class="progress">
                    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%">
                        <span class="sr-only">25% effectué (success)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-top: 3vh">
        <div class="row">
            <h1>Sélectionnez une adresse d'expédition</h1>
        </div>
    </div>
    <div class="container" style="margin-top: 3vh">
        <div class="row">
            <div class="col-6">
                <div>
                    <h3>Mon Profil</h3>
                </div>
                <ul style="list-style-type: none">
                    <li><span><strong>Prénom :</strong></span> {{ app.user.nom }}</li>
                    <li><span><strong>Nom :</strong></span> {{ app.user.prenom }}</li>
                    <li><span><strong>Adresse :</strong></span> {{ app.user.adresse }} {{ app.user.codePostal }} {{ app.user.ville }}</li>
                    <li><span><strong>Téléphone :</strong></span> {{ app.user.numeroTelephone }}</li>
                    <li><span><strong>Email:</strong></span> {{ app.user.email }}</li>
                </ul>
                <button class="btn btn-primary"><a href="/profile/edit"> Modifier mon adresse de livraison</a></button>
                <button class="btn btn-success"><a href="{{ path('cart_delivery') }}"> Choisir mon mode de livraison</a></button>
            </div>
        </div>
    </div>


</section>




{% endblock %}
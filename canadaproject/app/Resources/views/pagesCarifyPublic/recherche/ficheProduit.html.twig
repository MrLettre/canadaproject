{% extends 'Base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- Bootstrap core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="css/mdb.min.css" rel="stylesheet">
  <!-- Your custom styles (optional) -->
  <link href="css/style.min.css" rel="stylesheet">
  
{% endblock %}

{% block body %}

 <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

      <!--Grid row-->
      <div class="row wow fadeIn">

        <!--Grid column-->
        <div class="col-md-6 mb-4">
        {% for voiturephy in voiturephy %}
          <img src="/images/photosVehiculePhysique/{{ voiturephy.imageName }}" class="img-fluid" alt="PhotoVehicule">
        {% endfor %}

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <!--Content-->
          <div class="p-4">

            <div class="mb-3">
              <a href="">
               {% for voiturephy in voiturephy %}
                <span class="badge grey mr-1">{{voiturephy.kilometrage}} KM</span>
                {% endfor %}
              </a>
              <a href="">
              {% for voiturephy in voiturephy %}
                <span class="badge blue mr-1">mise en ligne: {{voiturephy.dateMiseEnLigne|date('Y-m-d')}}</span>
              {% endfor %}  
              </a>
              <a href="">
              {% for voiturephy in voiturephy %}
                <span class="badge red mr-1">Mise en circulation: {{voiturephy.dateDeMiseEnCirculation|date('Y-m-d')}}</span>
              {% endfor %}  
              </a>
            </div>

            <p class="lead">
              {% for voituredef in voituredef %}
              <h1>{{voituredef.nom}}</h1>
              {% endfor %}
              {% for voiturephy in voiturephy %}
              <h6>{{voiturephy.prixHT}}$ HT</h6>
              <h6>{{voiturephy.prixTTC}}$ TTC</h6>
              {% endfor %}

            </p>

            <hr>

            {% for voiturephy in voiturephy %}
            <h6> Vendeur: {{ voiturephy.concession}}</h6>
            {% endfor %}

            <hr>

            <h4 class="lead font-weight-bold">Description</h4>

            {% for voiturephy in voiturephy %}
            <p>{{voiturephy.descriptif}}</p>
            {% endfor %}

            <form class="d-flex justify-content-left">
              <!-- Default input -->
              <button class="btn btn-primary btn-md my-0 p" type="submit">Add to cart
                <i class="fa fa-shopping-cart ml-1"></i>
              </button>

            </form>

          </div>
          <!--Content-->

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

      <hr>

      <!--Grid row-->
      <div class="row d-flex justify-content-center wow fadeIn">

        <!--Grid column-->
        <div class="col-md-6 text-center">

     

          <h4 class="my-4 h4">Options</h4>

         {% for optionsphy in optionsphy %}
          <p>- {{optionsphy}}</p>
         {% endfor %} 
        

      

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->


      <hr>

      <!--Grid row-->
      <div class="row d-flex justify-content-center wow fadeIn">

        <!--Grid column-->
        <div class="col-md-6 text-center">

      {% for voiturephy in voiturephy %}

          <h3 class="my-4 h4">{{voiturephy.version.model.marque}} {{voiturephy.version.model}}: {{voiturephy.version.model.typeVehicule}}</h3>

          <h6>Boite de Vitesse: {{ voiturephy.version.bdv}}</h6>
          <h6>Transmission: {{ voiturephy.version.transmission}}</h6>
          <h6>Energie: {{ voiturephy.version.energie}}</h6>

           <table>
        <thead>
            <tr>
                <th>Puissance Thermique</th>
                <th>Puissance Hybride</th>
                <th>Puissance Electrique</th>
                <th>Autonomie thermique</th>
                <th>Autonomie Hybride</th>
                <th>Autonomie electrique</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>{{ voiturephy.version.puissanceTh }}</td>
                <td>{{ voiturephy.version.puissanceHy }}</td>
                <td>{{ voiturephy.version.puissanceEl }}</td>
                <td>{{ voiturephy.version.autonimieTh }}</td>
                <td>{{ voiturephy.version.autonomieHy }}</td>
                <td>{{ voiturephy.version.autonomieEl }}</td>
            </tr>
        </tbody>

      {% endfor %}

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

      <!--Grid row-->
      <div class="row wow fadeIn">

        <!--Grid column-->
        <div class="col-lg-4 col-md-12 mb-4">

          <img src="" class="img-fluid" alt="">

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-lg-4 col-md-6 mb-4">

          <img src="" class="img-fluid" alt="">

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-lg-4 col-md-6 mb-4">

          <img src="" class="img-fluid" alt="">
          
        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

    </div>
  </main>


  

    

{% endblock %}



 


{% block javascripts %}
  <script type="text/javascript" src="js/jquery-3.3.1.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="js/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="js/mdb.min.js"></script>
  <!-- Initializations -->
  <script type="text/javascript">
    // Animations initialization
    new WOW().init();
  </script>
{% endblock %}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/entreprise.css') }}">
    <link rel="stylesheet" href="{{ asset('build/style.css') }}">
    <script defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js" integrity="sha384-slN8GvtUJGnv6ca26v8EzVaR9DC58QEwsIk9q1QXdCU8Yu8ck/tL/5szYlBbqmS+" crossorigin="anonymous"></script> <!-- Package d'icons -->
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
{% endblock %}

{% block body %}


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/header/carrouselaccueil1.jpg" alt="First slide" style="width: 100%; height: 500px; object-fit: cover;">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/header/carrouselaccueil2.jpg" alt="Second slide" style="width: 100%; height: 500px;object-fit: cover;">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/header/carrouselaccueil3.jpg" alt="Third slide" style="width: 100%; height: 500px;object-fit: cover;">
            </div>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- DERNIERS AJOUTS A LA VENTE -->
    <div class="title-home animated fadeInRight ">
        <br><br>
        <hr class="trait">
        <h1 class="titreAccueil text-center text-monospace">ELLES N'ATTENDENT QUE VOUS</h1>
        <hr class="trait">
        <br><br>
    </div>

    <div class="vignettes">
    {% for vehPhy in vehPhys %}
        <!-- Card Light -->
        <div class="lightCard">
            <!-- Card image -->
            <div class="view overlay vehover">
                <img class="card-img-top vehphoto" src="/images/photosVehiculePhysique/{{ vehPhy.imageName }}" alt="Card image cap">
                <a>
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <!-- Card content -->
            <div class="card-body">
                <!-- Title -->
                <h6 class="card-title">{{ vehPhy.version.model.marque }} {{ vehPhy.version.model }} {{ vehPhy.version }}</h6>
                <hr>
                <h4 style="color: #5E7AE5">{{ vehPhy.prixHT }} $</h4>
                <!-- Link -->
                <a href="/vehiculephysique/recherche/{{ vehPhy.id }}" class="black-text d-flex justify-content-end"><h5>Consulter l'annonce <i class="fa fa-angle-double-right"></i></h5></a>

            </div>

        </div>
        <!-- Card Light -->
    {% endfor %}
    </div>




    <!-- DERNIERS AJOUTS AU COMPARATEUR CARIFY -->
    <div class="title-home animated fadeInRight ">
        <br><br>
        <hr class="trait">
        <h1 class="titreAccueil text-center text-monospace">NOUVEAU DANS VOTRE COMPARATEUR CARIFY</h1>
        <hr class="trait">
        <br><br>
    </div>

    <div class="vignettes">
    {% for vehDef in vehDefs %}
        <!-- Card Light -->
        <div class="lightCard">
            <!-- Card image -->
            <div class="view overlay vehover">
                <img class="card-img-top vehphoto" src="/images/logoModeles/{{ vehDef.version.model.imageName }}" alt="Card image cap">
                <a>
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <!-- Card content -->
            <div class="card-body">
                <!-- Title -->
                <h4 class="card-title">{{ vehDef.nom }}</h4>
                <hr>
               <!-- Link -->
                <a href="/comparateur/{{ vehDef.id }}/show" class="black-text d-flex justify-content-end"><h5>Aller comparer <i class="fa fa-angle-double-right"></i></h5></a>

            </div>

        </div>
        <!-- Card Light -->
    {% endfor %}
    </div>



    <!-- DOSSIERS CARIFY -->
    <div class="title-home animated fadeInRight ">
        <br><br>
        <hr class="trait">
        <h1 class="titreAccueil text-center text-monospace">NOS DERNIERS DOSSIERS</h1>
        <hr class="trait">
        <br><br>
    </div>

    {% for article in articles %}

    <div class="blog-card">
        <div class="meta">
            <div class="photo" style="background-image: url('/images/photoArticle/{{ article.imageName }}')"></div>
                <ul class="details"><li class="tags">
                    <li>{{ article.sujet }}</li>
                </ul>
            </div>
            <div class="description">
                <h1>Dossier {{ article.sujet }} :</h1>
                <h2>{{ article.titre }}</h2>
                <p>{{ article.resume }}</p>
                    <br>{{ article.resumeImportant }}
                <p class="read-more"><a href="/article/{{ article.id }}">Lire l'article</a>
                </p>
            </div>
        </div>
    </div>


    {% endfor %}

    <button onclick="topFunction()" id="myBtn" title="haut de page">
        <i data-feather="chevron-up"></i>
    </button>
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('build/app.js') }}"></script>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
{% endblock %}